@using WoWMarketWatcher.UI.Services
@inject AuthService authService

@page "/"

<MudGrid Justify="Justify.Center" Class="mt-6">
    <MudCard Class="login-card">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Align="Align.Center">Login</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField @bind-Value="Username" Label="Username" Variant="Variant.Text"></MudTextField>
            <MudTextField @bind-Value="Password" Label="Password" Variant="Variant.Text" InputType="InputType.Password">
            </MudTextField>
        </MudCardContent>
        <MudCardActions>
            <MudGrid Spacing="2" Justify="Justify.Center">
                <MudItem>
                    <MudButton Variant="Variant.Filled" Color="Color.Success" @onclick="() => LoginAsync()">Login
                    </MudButton>
                </MudItem>

                <MudItem>
                    <MudButton Variant="Variant.Filled" Color="Color.Error" @onclick="() => ClearLoginForm()">Clear
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudCardActions>
    </MudCard>
</MudGrid>

<style>
    .login-card {
        width: 400px;
    }
</style>

@code
{
    private string Username { get; set; }

    private string Password { get; set; }

    public async Task LoginAsync()
    {
        Console.WriteLine("Logging in!");

        var res = await this.authService.Login(this.Username, this.Password);

        Console.WriteLine(res.User.Username);
    }

    public void ClearLoginForm()
    {
        this.Username = "";
        this.Password = "";
    }
}
