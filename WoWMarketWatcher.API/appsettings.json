{
  "Cors": {
    "AllowedOrigins": [
      "https://rwherber.com",
      "http://localhost:4200",
      "http://localhost:5000",
      "https://localhost:5001",
      "https://localhost:5002",
      "http://localhost:5003",
      "http://localhost:8080",
      "https://localhost:8080",
      "http://localhost:31653",
      "https://localhost:44363"
    ],
    "ExposedHeaders": [
      "X-Token-Expired",
      "X-Correlation-Id",
      "X-Rate-Limit-Limit",
      "X-Rate-Limit-Remaining",
      "X-Rate-Limit-Reset"
    ]
  },
  "ApplicationInsights": {
    "CloudRoleName": "wow-market-watcher-d"
  },
  "Blizzard": {
    "BaseUrl": "https://us.api.blizzard.com",
    "OAuthUrl": "https://us.battle.net/oauth/token"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "HttpStatusCode": 429,
    "QuotaExceededResponse": {
      "Content": "{{\"errors\":[\"Too Many Requests\"],\"type\":\"https://tools.ietf.org/html/rfc6585#section-4\",\"title\":\"Too Many Requests\",\"status\":429,\"detail\":\"Quota exceeded. Maximum allowed: {0} per {1}. Please try again in {2} second(s).\",\"instance\":\"\",\"extensions\":{{}}}}",
      "ContentType": "application/json",
      "StatusCode": 429
    },
    "GeneralRules": [
      {
        "Endpoint": "get:/health",
        "Period": "10s",
        "Limit": 50
      }
    ]
  },
  "AllowedHosts": "*",
  "BackgroundJobs": {
    "PullAuctionDataBackgroundJob": {
      "Enabled": true,
      "Schedule": "0 */4 * * *"
    },
    "RemoveOldDataBackgroundJob": {
      "Enabled": true,
      "Schedule": "0 2 * * *"
    },
    "PullRealmDataBackgroundJob": {
      "Enabled": true,
      "Schedule": "0 3 * * *"
    }
  }
}
